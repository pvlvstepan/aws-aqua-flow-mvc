@page
@model IndexModel

@{
    // Set the page title and active page in ViewData
    ViewData["Title"] = "Manage Products";
    ViewData["ActivePage"] = ManageAdminPages.ManageProducts;
}

<!-- Page heading -->
<h2>Manage Products</h2>

@if (Model.ProductsList.Any())
{
    <!-- Display a table if there are products available -->
    <table class="table">
        <thead>
            <tr>
                <!-- Table headers -->
                <th>Product ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock Quantity</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Loop through each product and display its details -->
            @foreach (var product in Model.ProductsList)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                    <td>@product.StockQuantity</td>
                    <td>@product.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>

                    <!-- Actions for each product (Edit, Delete) -->
                    <td>
                        <a asp-page="./Edit" asp-route-id=@product.ProductId class="btn btn-warning">Edit</a>
                        <a asp-page="./Delete" asp-route-id=@product.ProductId class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <!-- Display a message if no products are available -->
    <p>No products available.</p>
}

<!-- Link to create a new product -->
<div>
    <a asp-page="./Create" class="btn btn-primary">Create New Product</a>
</div>
