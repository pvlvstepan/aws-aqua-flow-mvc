@model List<AquaFlow.Models.Order>  

<section class="container py-5 flex-grow-1">
    <h1>Orders List</h1>
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-lg-12">

            @if (Model != null && Model.Count > 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Address</th>
                            <th>Order Date</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.OrderID</td>
                                <td>@item.Address</td>
                                <td>@item.OrderDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>RM @item.TotalAmount.ToString("0.00")</td>
                                <td>@item.Status</td>
                                <td>
                                    <a asp-page="/Details" asp-route-id="@item.OrderID">Details</a> |
                                    <a asp-page="/Delete" asp-route-id="@item.OrderID">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No orders found.</p>
            }
        </div>
    </div>
</section>
