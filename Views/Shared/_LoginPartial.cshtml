@using Microsoft.AspNetCore.Identity
@using AquaFlow.Areas.Identity.Data

@inject SignInManager<AquaFlowUser> SignInManager
@inject UserManager<AquaFlowUser> UserManager

<ul class="ms-auto my-auto d-flex list-unstyled">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="dropdown nav-item">
            <a class="btn btn-outline-primary dropdown-toggle dropdown-menu-end" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @UserManager.GetUserName(User)
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <a id="manage" class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage Profile">Profile</a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="dropdown-item text-danger">Logout</button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-outline-primary me-2" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>
